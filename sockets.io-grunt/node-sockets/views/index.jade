extends layout

block content
  h1= title
  p Welcome to #{title}

  script(src="//cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.1/socket.io.min.js")
  script.
    let socket = io.connect('http://localhost:4000');
    socket.on('fromServer', function(data){
      console.log(data);
      socket.emit('fromClient', {
        message: "Hello from client"
      })
    });
